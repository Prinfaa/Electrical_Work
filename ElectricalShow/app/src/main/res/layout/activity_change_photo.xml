<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activities.ChangePhotoActivity">

    <include layout="@layout/include_back_top"/>


    <ImageView
        android:id="@+id/iv_photo_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_260"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:scaleType="fitXY"
        />


    <Button
        android:id="@+id/btn_choose_into_album"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_25"
        android:background="@drawable/shape_choose_into_alum"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="相册选择"
        />
    <Button
        android:id="@+id/btn_take_a_picture"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_25"
        android:background="@drawable/shape_choose_into_alum"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="拍照"
        />

</LinearLayout>
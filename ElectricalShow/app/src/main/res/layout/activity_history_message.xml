<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.HistoryMessageActivity">

    <include layout="@layout/include_back_top"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_msg_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:tabSelectedTextColor="#7f95d1"
        app:tabTextColor="#292929"
        app:tabIndicatorColor="#7f95d1"
        app:tabGravity="fill"
        app:tabBackground="@color/white">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDevice"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="65sp"
                    android:orientation="vertical"
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15sp"
                            android:gravity="center|right"
                            android:text="城市："
                            android:textColor="#BBFFFFFF" />

                        <Spinner
                            android:id="@+id/spCity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4" />

                        <EditText
                            android:id="@+id/etSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="@null"
                            android:gravity="left"
                            android:paddingLeft="5sp"
                            android:paddingRight="5sp"
                            android:text=""
                            android:textColor="#FFF"
                            android:textSize="14sp" />
                        />

                        <ImageView
                            android:id="@+id/ivSearch"
                            android:layout_width="30sp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10sp"
                            android:layout_marginTop="1sp"
                            android:paddingBottom="1sp"
                            android:src="@drawable/search" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="3sp"
                        android:paddingTop="3sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:paddingLeft="15sp"
                            android:text="选择建筑："
                            android:textColor="#AAFFFFFF" />

                        <Spinner
                            android:id="@+id/spConstructionName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingRight="10sp"
                            android:text=""
                            android:textColor="#FFF"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="3sp"
                        android:paddingTop="3sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:paddingLeft="15sp"
                            android:text="所属单位："
                            android:textColor="#AAFFFFFF" />

                        <TextView
                            android:id="@+id/tvUnitName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="left"
                            android:privateImeOptions="15sp"
                            android:text=""
                            android:textColor="#FFF"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_margin="10sp"
                        android:background="#ccc" />

                    <LinearLayout
                        android:id="@+id/llBaseInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="3sp"
                            android:paddingTop="3sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center|right"
                                android:paddingLeft="15sp"
                                android:text="城市："
                                android:textColor="#AAFFFFFF" />

                            <TextView
                                android:id="@+id/tvCity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text=""
                                android:textColor="#FFFFFF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center|right"
                                android:text="区县："
                                android:textColor="#AAFFFFFF" />

                            <TextView
                                android:id="@+id/tvCounty"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingRight="15sp"
                                android:text=""
                                android:textColor="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="3sp"
                            android:paddingTop="3sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingLeft="15sp"
                                android:text="街办："
                                android:textColor="#AAFFFFFF" />

                            <TextView
                                android:id="@+id/tvCommunity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingRight="15sp"
                                android:text=""
                                android:textColor="#FFF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="3sp"
                            android:paddingTop="3sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingLeft="15sp"
                                android:text="纬度："
                                android:textColor="#AAFFFFFF" />

                            <TextView
                                android:id="@+id/tvLat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingRight="15sp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#FFF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="经度："
                                android:textColor="#AAFFFFFF" />

                            <TextView
                                android:id="@+id/tvLng"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingRight="15sp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="3sp"
                            android:paddingTop="3sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingLeft="15sp"
                                android:text="地址："
                                android:textColor="#AAFFFFFF" />

                            <TextView
                                android:id="@+id/tvAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingRight="15sp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#FFF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="3sp"
                            android:paddingTop="3sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingLeft="15sp"
                                android:text="附近："
                                android:textColor="#AAFFFFFF" />

                            <TextView
                                android:id="@+id/tvAddressDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingRight="15sp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#FFF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_margin="10sp"
                            android:background="#ccc" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llConstructionInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="3sp"
                            android:paddingTop="3sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingLeft="15sp"
                                android:text="建筑类型："
                                android:textColor="#AAFFFFFF" />

                            <TextView
                                android:id="@+id/tvConstructionType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingRight="15sp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#FFF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="建筑结构："
                                android:textColor="#AAFFFFFF" />

                            <TextView
                                android:id="@+id/tvStructureType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingRight="15sp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="3sp"
                            android:paddingTop="3sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingLeft="15sp"
                                android:text="层数："
                                android:textColor="#AAFFFFFF" />

                            <TextView
                                android:id="@+id/tvLayer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingRight="15sp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#FFF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="高度："
                                android:textColor="#AAFFFFFF" />

                            <TextView
                                android:id="@+id/tvHeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingRight="15sp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#FFF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="面积："
                                android:textColor="#AAFFFFFF" />

                            <TextView
                                android:id="@+id/tvBuildingArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:gravity="left"
                                android:paddingRight="15sp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#FFF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="3sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingLeft="15sp"
                                android:text="消防设施："
                                android:textColor="#AAFFFFFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="3sp">

                            <TextView
                                android:id="@+id/tvFireFac"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingLeft="25sp"
                                android:paddingRight="25sp"
                                android:text=""
                                android:textColor="#FFF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_margin="10sp"
                            android:background="#ccc" />

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvValueType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="15sp"
                            android:text=""
                            android:textColor="#FFF" />

                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/flValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20sp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=""
                                android:textColor="#FFEE00"
                                android:textSize="40sp"
                                android:padding="5sp"
                                android:textStyle="italic|bold" />



                        </LinearLayout>

                        <Button
                            android:id="@+id/btnDealFire"
                            android:layout_width="80sp"
                            android:layout_height="40sp"
                            android:layout_gravity="bottom|left"
                            android:layout_marginLeft="10sp"
                            android:text="消除报警"
                            android:textSize="12sp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="10sp"
                            android:gravity="right"
                            android:paddingRight="15sp"
                            android:text=""
                            android:textColor="#FFF"
                            />

                    </FrameLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_margin="10sp"
                        android:background="#ccc" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="3sp"
                        android:paddingTop="3sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="15sp"
                            android:text="安装部位："
                            android:textColor="#AAFFFFFF" />

                        <EditText
                            android:id="@+id/etPosition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="left"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#FFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="3sp"
                        android:paddingTop="3sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="15sp"
                            android:text="设备编号："
                            android:textColor="#AAFFFFFF" />

                        <TextView
                            android:id="@+id/tvCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="left"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#FFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="3sp"
                        android:paddingTop="3sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="15sp"
                            android:text="端口类型："
                            android:textColor="#AAFFFFFF" />

                        <TextView
                            android:id="@+id/tvPortType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingRight="15sp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#FFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="端口编号："
                            android:textColor="#AAFFFFFF" />

                        <TextView
                            android:id="@+id/tvPort"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#FFF" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="3sp"
                        android:paddingTop="3sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="15sp"
                            android:text="关联设施："
                            android:textColor="#AAFFFFFF" />

                        <TextView
                            android:id="@+id/tvFac"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingRight="15sp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#FFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="MITU数据："
                            android:textColor="#AAFFFFFF" />

                        <TextView
                            android:id="@+id/tvMITUOriginalValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#FFF" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvMsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFF00"
                        android:gravity="center"
                        android:layout_marginTop="50dp"
                        android:text=""
                        android:visibility="invisible"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="10sp"
        android:paddingRight="10sp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_gravity="bottom"
            android:layout_marginRight="2sp"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/colorConstruction" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="2sp"
            android:layout_weight="1"
            android:text="保存"
            android:textColor="@color/colorConstruction" />
    </LinearLayout>

</FrameLayout>
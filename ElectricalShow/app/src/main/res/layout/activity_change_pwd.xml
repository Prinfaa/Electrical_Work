<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.ChangePwdActivity">

    <include layout="@layout/include_back_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textColor="@color/black_text"
            android:textSize="15sp"

            />


        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_5"
            android:text="15555555555"
            android:textColor="@color/black_text"
            android:textSize="15sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/home_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        >

        <TextView
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:text="原密码"
            android:textSize="15sp"
            android:textColor="@color/black_text"
            />

        <EditText
            android:id="@+id/et_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="@null"
            android:maxLines="1"
            android:inputType="textPassword"
            android:hint="请输入原始密码"
            android:paddingLeft="@dimen/dp_10"
            android:textSize="14sp"
            android:textColor="@color/black_text"
            android:ellipsize="end"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/home_line"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_90"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        >

        <TextView
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textSize="15sp"
            android:textColor="@color/black_text"
            />

        <EditText
            android:id="@+id/et_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="@null"
            android:maxLines="1"
            android:inputType="textPassword"
            android:hint="请输入新密码"
            android:paddingLeft="@dimen/dp_10"
            android:textSize="14sp"
            android:textColor="@color/black_text"
            android:ellipsize="end"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/home_line"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_90"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        >

        <TextView
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="15sp"
            android:textColor="@color/black_text"
            />

        <EditText
            android:id="@+id/et_sure_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="@null"
            android:maxLines="1"
            android:inputType="textPassword"
            android:hint="确认密码"
            android:paddingLeft="@dimen/dp_10"
            android:textSize="14sp"
            android:textColor="@color/black_text"
            android:ellipsize="end"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/home_line"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_90"/>


    <Button
        android:id="@+id/btn_forget_pwd"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@null"
        android:textColor="@color/bottom_button_text_color"
        android:textSize="14sp"
        android:text="忘记密码？"
        />


</LinearLayout>
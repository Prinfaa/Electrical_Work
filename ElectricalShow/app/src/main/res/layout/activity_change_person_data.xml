<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activities.ChangePersonDataActivity">

    <include layout="@layout/include_back_top"/>


    <RelativeLayout
        android:id="@+id/rl_user_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/message_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:textColor="@color/black_text"
            android:text="头像"
            android:layout_marginLeft="@dimen/dp_20"
            />

        <ImageView
            android:id="@+id/iv_photo_image"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="@dimen/dp_50"
            />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/more"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/iv_photo_image"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@mipmap/message_bg"
        android:layout_marginTop="@dimen/dp_15"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:textColor="@color/black_text"
            android:text="昵称"
            android:layout_marginLeft="@dimen/dp_20"
            />

        <EditText
            android:id="@+id/et_nick_name"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:hint="小明"
            android:gravity="right"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/black_text"
            android:background="@null"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxEms="15"
            android:layout_marginRight="@dimen/dp_20"
            />




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@mipmap/message_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:textColor="@color/black_text"
            android:text="手机号"
            android:layout_marginLeft="@dimen/dp_20"
            />

        <EditText
            android:id="@+id/et_user_num"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:hint="15555555555"
            android:gravity="right"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/black_text"
            android:background="@null"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxEms="15"
            android:inputType="number"
            android:layout_marginRight="@dimen/dp_20"
            />




    </RelativeLayout>

</LinearLayout>